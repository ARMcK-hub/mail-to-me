{
	"name": "mail-to-me",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "dev-container",
	"workspaceFolder": "/workspaces/mail-to-me",
	"postCreateCommand": "cd $WORKSPACE/ && poetry install",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					}
				}
			},
			"extensions": [
				"hashicorp.terraform",
				"janisdd.vscode-edit-csv",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ritwickdey.liveserver",
				"shd101wyy.markdown-preview-enhanced"
			]
		}
	}
}